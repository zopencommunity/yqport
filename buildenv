# bump: yq-version /YQ_VERSION="(.*)"/ https://github.com/mikefarah/yq.git|semver:^4
YQ_VERSION="4.52.4"

export ZOPEN_BUILD_LINE="DEV"
export ZOPEN_CATEGORIES="utilities"
export ZOPEN_DEV_URL="https://github.com/mikefarah/yq.git"
export ZOPEN_DEV_DEPS="check_go"

export ZOPEN_CONFIGURE="skip"
export ZOPEN_MAKE="go"
export ZOPEN_MAKE_OPTS="build"
export ZOPEN_MAKE_MINIMAL="yes"
export ZOPEN_CHECK="zopen_check"
export ZOPEN_INSTALL="zopen_install"

zopen_init()
{
  # Go installs binaries, so create the bin dir as well
  export GOBIN=$ZOPEN_INSTALL_DIR/bin
  mkdir -p \$ZOPEN_INSTALL_DIR/bin
  unset CC CXX
  export CGO_ENABLED=0 # disable C Go as it's not needed in yq
}

zopen_check()
{
  # Smoke test
  echo "--- RUN   TestSmoke"
  
  # The binary should be in yq/yq if built from root, or ./yq if built from yq/
  if [ -f "yq/yq" ]; then
    BINARY="./yq/yq"
  elif [ -f "./yq" ]; then
    BINARY="./yq"
  else
    # Fallback to searching
    BINARY=$(find . -name yq -type f -executable | head -n 1)
  fi
  
  if [ -z "$BINARY" ]; then
    echo "Error: yq binary not found"
    echo "--- FAIL: TestSmoke (0.00s)"
  else
    echo "system: zos" > smoke_test.yml
    if "$BINARY" eval '.system' smoke_test.yml | grep -q zos; then
      echo "--- PASS: TestSmoke (0.00s)"
    else
      echo "--- FAIL: TestSmoke (0.00s)"
    fi
    rm smoke_test.yml
  fi

  # Unit tests
  if [ -d "yq" ]; then
    cd yq
  fi
  export CGO_ENABLED=0
  export GOMAXPROCS=1
  # Run the unit tests with verbose output
  go test -v $(go list ./... | grep -v -E 'examples' | grep -v -E 'test')
}

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  if [ ! -f "$chk" ]; then
    echo "actualFailures:1"
    echo "totalTests:1"
    echo "expectedFailures:0"
    echo "expectedTotalTests:1"
    return
  fi

  totalTests=$(grep -Ec "^--- (PASS|FAIL|SKIP): " "$chk")
  actualFailures=$(grep -Ec "^--- FAIL: " "$chk")

  # Echo the following information to gauge build health
  echo "actualFailures:$actualFailures"
  echo "totalTests:$totalTests"
  echo "expectedFailures:0"
  echo "expectedTotalTests:$totalTests"
}

zopen_test()
{
  go test
}

zopen_install()
{
  go install
}

zopen_get_version()
{
  $GOBIN/yq --version | cut -f4 -d' ' | sed "s#^v##g"
}
